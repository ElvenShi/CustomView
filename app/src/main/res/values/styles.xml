<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <!--activity 右进右出切换动画-->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_right_out</item>
    </style>

    <!--activity 从右往左进入，从左往右推出切换动画-->
    <style name="activityAnimation2" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_from_right_to_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_from_left_to_right_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_from_left_to_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_from_left_to_right_out</item>
    </style>
</resources>
